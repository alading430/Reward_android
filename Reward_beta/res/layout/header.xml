<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/layout_header_content"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:background="@drawable/maintab_toolbar_bg" >

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:contentDescription="@string/contentDescription"
            android:paddingRight="10dp"
            android:drawableLeft="@drawable/back_selector"
        	android:visibility="gone"
         />
        <RelativeLayout
            android:id="@+id/layout_title_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dip"
            android:background="@null"
            android:gravity="center"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/iv_title_left"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_left_w"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_title_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_title_left"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10dip" >

                <ImageView
                    android:id="@+id/iv_title_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dip"
                    android:src="@drawable/title_location"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_location_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dip"
                    android:gravity="center"
                    android:text="当前"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
        
        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:text="title"
            android:visibility="gone" 
            />

        <ImageView
            android:id="@+id/iv_title_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/title_img"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_do"
            android:layout_width="65dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_corner_small"
            android:textColor="#a13456"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:drawableTop="@drawable/sharebtn"
            android:padding="5dip"
            android:text="分享"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_capturecode"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:padding="5dip"
            android:src="@drawable/tf_menu_qrcode"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:paddingBottom="5dip"
            android:paddingRight="15dip"
            android:paddingTop="5dip"
            android:scaleType="fitCenter"
            android:src="@drawable/menuflag"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/my_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:src="@drawable/more"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_message_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/message_btn_send_new"
            android:visibility="gone" />

<!--         <com.dzg.custom.widget.dropdownlist.DropdownListView -->
<!--             android:id="@+id/search_input_drop_list" -->
<!--             android:layout_width="80dp" -->
<!--             android:layout_height="match_parent" -->
<!--             android:layout_alignParentRight="true" -->
<!--             android:layout_marginRight="1dp" -->
<!--             android:visibility="gone" /> -->
    </RelativeLayout>

</LinearLayout>