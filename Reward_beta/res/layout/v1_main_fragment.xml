<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black" >

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:layout_margin="5dp"
        android:scrollbars="none">
        <LinearLayout android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >
		    <FrameLayout
		        android:id="@+id/main_layout_1"
		        android:layout_width="match_parent"
		        android:layout_height="100dp"
		          >
		        <com.dzg.custom.gallery.OneFlingGallery
		            android:id="@+id/gallery"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:fadingEdge="none"
        			android:spacing="0px"/>
		        <com.dzg.custom.gallery.GalleryNavigator
			        android:id="@+id/navi"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginBottom="5dp"
			        android:layout_gravity="bottom|center_horizontal" />
		        <RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="match_parent">
			        <ImageView android:id="@+id/main_logo"
			            android:layout_width="90dp"
			            android:layout_height="35dp"
			            android:layout_alignParentTop="true"
			            android:layout_alignParentLeft="true"
			            android:background="@color/gray"
			            android:contentDescription="@string/contentDescription"
			            />
			        <TextView android:id="@+id/login_btn"
			            android:layout_width="50dp"
			            android:layout_height="27dp"
			            android:layout_alignParentTop="true"
			            android:layout_alignParentRight="true"
			            android:gravity="center"
			            android:text="登录"
			            android:background="@color/gray"
			            android:contentDescription="@string/contentDescription"
			            />
		        </RelativeLayout>
		        
		    </FrameLayout>
		
		    <LinearLayout
		        android:id="@+id/main_layout_2"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:orientation="horizontal"
		        android:layout_marginTop="5dp"  >
		
		        <ImageView android:id="@+id/main_reward"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:background="@drawable/reward_selector"
		            android:layout_weight="1"
		            />
		        <ImageView android:id="@+id/main_receive"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:layout_marginLeft="5dp"
		            android:background="@drawable/receive_selector"
		            android:layout_weight="1"
		            />
		    </LinearLayout>
		
		    <LinearLayout
		        android:id="@+id/main_layout_3"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:orientation="horizontal"
		        android:layout_marginTop="5dp" >
		
		        <ImageView android:id="@+id/main_buy"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:background="@drawable/buy_selector"
		            android:layout_weight="1"
		            android:gravity="center"
		            />
		        <ImageView android:id="@+id/main_sell"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:background="@drawable/sell_selector"
		            android:layout_marginLeft="5dp"
		            android:layout_weight="1"
		            />
		    </LinearLayout>
		
		    <LinearLayout
		        android:id="@+id/main_layout_4"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:orientation="horizontal"
		        android:layout_marginTop="5dp"
		        >
		        <ImageView android:id="@+id/main_line"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:background="@drawable/chunyun_selector"
		            android:layout_weight="1"
		            />
		        <LinearLayout android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:orientation="vertical"
		            android:layout_marginLeft="5dp"
		            android:layout_weight="1"
		            >
		            <ImageView
		                android:id="@+id/main_mine"
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:background="@drawable/mine_selector"
		                android:layout_weight="1"
		                />
		            <LinearLayout android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:orientation="horizontal"
		                android:layout_marginTop="5dp"
		                android:layout_weight="1">
		                <ImageView android:id="@+id/main_suggest"
				            android:layout_width="0dp"
				            android:layout_height="match_parent"
				            android:background="@drawable/suggest_selector"
				            android:layout_weight="1"
				            android:contentDescription="@string/contentDescription"
				            />
			            <ImageView android:id="@+id/main_service"
				            android:layout_width="0dp"
				            android:layout_height="match_parent"
				            android:background="@drawable/call_service_selector"
				            android:layout_marginLeft="5dp"
				            android:layout_weight="1"
				            android:contentDescription="@string/contentDescription"
				            />
		            </LinearLayout>
		        </LinearLayout>
		    </LinearLayout>
	    </LinearLayout>
    </ScrollView>
</LinearLayout>
