<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <include
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header" />
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/border"
        >
        <EditText android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="手机号或邮箱"
            android:background="@color/white"
            />
        <View
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@color/color_dddddd" />
        <EditText android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="密码"
            android:password="true"
            android:background="@color/white"
            />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        >
        <TextView android:id="@+id/login_btn"
        	android:layout_width="match_parent"
        	android:layout_height="40dp"
        	android:gravity="center"
        	android:text="登录"
        	android:textColor="@color/black"
        	android:textSize="17dp"
        	android:layout_weight="1"
        	android:background="@drawable/button_orange_bg"
        	/>
        <TextView android:id="@+id/regist_btn"
        	android:layout_width="match_parent"
        	android:layout_height="40dp"
        	android:gravity="center"
        	android:layout_marginLeft="10dp"
        	android:text="注册"
        	android:textColor="@color/black"
        	android:textSize="17dp"
        	android:layout_weight="1"
        	android:background="@drawable/button_grey_bg"
        	/>
    </LinearLayout>
    
    <TextView android:id="@+id/forget_password_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget_password"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:textColor="@color/blue_start"
        />

</LinearLayout>