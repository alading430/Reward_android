<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/suggest_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <include
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header" />
    
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="感谢您提出的宝贵意见和建议"
        android:textColor="@color/grey_end"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        />
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示：如果您的建议被采纳，我们将给予您积分奖励"
        android:textColor="@color/grey_end"
        android:layout_marginLeft="10dp"
        />
	<EditText android:id="@+id/suggest"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:lines="5"
	    android:gravity="left|top"
	    android:padding="2dp"
	    android:layout_margin="10dp"
	    android:background="@drawable/border"
	    />
	<TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系方式"
        android:textColor="@color/grey_end"
        android:layout_margin="10dp"
        />
	<EditText android:id="@+id/suggest"
	    android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:lines="1"
	    android:layout_margin="10dp"
	    android:padding="5dp"
	    android:hint="亲！留个联系方式吧^_^"
	    android:background="@drawable/border2"
	    />
	<Button android:id="@+id/submit_btn"
	    android:layout_width="160dp"
	    android:layout_height="40dp"
	    android:text="提交"
	    android:layout_marginTop="20dp"
	    android:layout_gravity="center_horizontal"
	    android:background="@drawable/button_orange_bg"
	    />
	<WebView
        android:id="@+id/show_return"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>