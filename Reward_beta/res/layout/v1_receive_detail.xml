<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header" />
    
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_margin="10dp"
	        android:background="@drawable/border"
	        >
	        <TextView android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="预约占座"
	            android:layout_margin="20dp"
	            android:layout_gravity="center_horizontal"
	            />
	        <View
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="@color/color_dddddd" />
	        <RelativeLayout android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_margin="10dp"
	            >
	            <TextView android:id="@+id/txt1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="顾客悬赏次数："
	                android:layout_alignParentLeft="true"
	                />
	            <TextView android:id="@+id/txt2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_toRightOf="@id/txt1"
	                android:text="120"
	                />
	            <TextView android:id="@+id/txt3"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_toRightOf="@id/txt2"
	                android:layout_marginLeft="10dp"
	                android:text="爽约数："
	                />
	            <TextView android:id="@+id/txt4"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_toRightOf="@id/txt3"
	                android:text="0"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:text="+积分数"
	                />
	        </RelativeLayout>
	        <LinearLayout android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_margin="10dp"
	            android:orientation="horizontal">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="赏金："
	                android:textSize="17sp"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="100"
	                android:textColor="@color/red"
	                android:textSize="17sp"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="元"
	                android:textSize="17sp"
	                />
	        </LinearLayout>
	        <TextView 
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="2014-11-6 21:41"
	             android:layout_margin="10dp"
	             />
	         <TextView 
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="8人"
	             android:layout_margin="10dp"
	             />
	         <View
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="@color/color_dddddd" />
	         <TextView 
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="将太无二（金地中心）"
	             android:layout_margin="10dp"
	             android:textSize="17sp"
	             />
	         <View
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="@color/color_dddddd" />
	         <TextView 
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="地址：阿达发生大事发生大事发生大事发生大事发生大是大非"
	             android:layout_margin="10dp"
	             />
	         <View
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="@color/color_dddddd" />
	         <TextView 
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="特殊：我希望是个靠窗的位置"
	             android:layout_margin="10dp"
	             />
	         <ImageView android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_margin="20dp"
	             android:layout_gravity="center_horizontal"
	             android:src="@drawable/defaulthead"
	             />
	         <TextView 
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="您有9分23秒领赏时间"
	             android:layout_margin="10dp"
	             android:layout_gravity="center_horizontal"
	             />
	         <TextView android:id="@+id/receive_btn"
	             android:layout_width="100dp"
	             android:layout_height="40dp"
	             android:background="@drawable/bg_selector"
	             android:layout_gravity="center_horizontal"
	             android:gravity="center"
	             android:layout_margin="20dp"
	             android:text="领赏"
	             />
	    </LinearLayout>
    </ScrollView>

</LinearLayout>